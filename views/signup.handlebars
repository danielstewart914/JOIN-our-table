<h2>Sign Up</h2>
<form class="signup-form container">
    <div class="row justify-content-center">
        <div class="form-floating m-1 col-sm-8 col-lg-6">
            <input class="form-control" name="FullName" type="text" id="fullName" placeholder="Full Name">
            <label class="from-label ms-3" for="fullName">Full Name</label>
        </div>
        <div class="form-floating m-1 col-sm-8 col-lg-6">
            <input class="form-control" name="username" type="text" id="username" placeholder="Username">
            <label class="from-label ms-3" for="username">Username</label>
        </div>
        <div class="form-floating m-1 col-sm-8 col-lg-6">
            <input class="form-control" name="Email:" type="text" id="signUpEmail" placeholder="Email:">
            <label class="from-label ms-3" for="signUpEmail">Email:</label>
        </div>
        <div class="form-floating m-1 col-sm-8 col-lg-6">
            <input class="form-control" name="Password" type="password" id="signUpPassword" placeholder="Password:">
            <label class="form-label ms-3" for="signUpPassword">Password:</label>
        </div>
        <div class="form-floating m-1 col-12 text-center">
            <button class="btn btn-secondary bg-dark-grey px-5" type="submit">Sign Up</button>
        </div>
    </div>
</form>
<footer>
    Already have an Account?
    <a href="/login">Login Here</a>
</footer>

<script src="/js/signUp.js"></script>